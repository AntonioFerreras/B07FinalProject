<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".AccountActivity">

    <TextView
        android:id="@+id/creation_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="creation_date"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/email_promt2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/email_promt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Creation Date:"
        android:textAlignment="center"
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_promt" />

    <TextView
        android:id="@+id/owner_store_promt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Store Owned:"
        android:textAlignment="center"
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/owner_store_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="store_id"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/owner_store_promt"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/name_promt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Name:"
        android:textAlignment="center"
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_promt" />

    <Button
        android:id="@+id/change_pswd_btn"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Change Password"
        android:textAlignment="center"
        android:textSize="12sp"
        app:backgroundTint="@color/app_violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_promt2" />

    <TextView
        android:id="@+id/email_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="email"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/email_promt"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/email_promt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:text="Sign out"
        app:backgroundTint="@color/app_violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#2C5161"
        tools:context=".General_page">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/app_violet"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/my_store_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_local_shipping_24"
            android:fadingEdge="none"
            android:fontFamily="@font/noto_sans"
            android:text="My Store"
            android:textSize="12sp"
            android:typeface="serif"
            app:backgroundTint="#00FFFFFF"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/shop_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:fadingEdge="none"
            android:fontFamily="@font/noto_sans"
            android:text="Shop"
            android:textSize="12sp"
            android:typeface="serif"
            app:backgroundTint="#00FFFFFF"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/cart_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
            android:fadingEdge="none"
            android:fontFamily="@font/noto_sans"
            android:text="My Cart"
            android:textSize="12sp"
            android:typeface="serif"
            app:backgroundTint="#00FFFFFF"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_store_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/account_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_person_selected_24"
            android:fadingEdge="none"
            android:fontFamily="@font/noto_sans"
            android:text="NAME"
            android:textColor="#9D9D9D"
            android:textSize="12sp"
            android:typeface="serif"
            app:backgroundTint="#00FFFFFF"
            app:iconPadding="0dp"
            app:iconTint="#9D9D9D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#00FFFFFF" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/name_tag"
        android:layout_width="178dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/name_promt"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="ACCOUNT INFO"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="OTHER"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_pswd_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>